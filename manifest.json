{
  "manifest_version": 1,
  "name": "ChatGPT → Make → Notion",
  "version": "1.0.0",
  "description": "Sends ChatGPT conversation to Make.com; ping logs; Notion dedupe + append new messages.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://hook.*.make.com/*",
    "https://hook.us2.make.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT → Make → Notion"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"]
    }
  ]
}
